    </head>
    <body>
        <div id="app">
            <header class="header">
                <div id="nav"><span class="centertxt"><span class="fas fa-search"></span> <a href="/" style="color: #ffffff !important; cursor: pointer;">Discord Lookup</a></span></div>
            </header>
            <div class="fpix">
                <div class="container">
                    <div class="row" style="justify-content: center;">
                        <div class="col-md-4">
                            <label for="inputid">User or Guild ID:</label>
                            <div class="lbc"></div>
                            <input onkeypress="return number(event)" onkeyup="isEnabled()" maxlength="22" type="text" id="inputid" class="form-control blackinput">
                            <br>
                            <div id="tbzh" style="float: right;">
                                <button id="lookup" style="cursor: pointer;" onclick="redirect()" class="form-control btn smallbtn smallerinp pull-right" disabled>Lookup
                                    <div class="ball-pulse smallBall" style="display: none;">
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footerarea">
                <p id="footer" style="margin: 0 0 0 0;">Â© <a href="https://www.rappytv.com" style="color: #91D6FF !important;">RappyTV#6969</a> | <a href="https://github.com/UltronDevelopment/discord.id">Check this project out on GitHub</a> | <span style="color: #ffa09e;">Version <%= locals.version %></span> | Not affiliated with Discord, Inc.</p>
            </div>
        </div>

        <script type="text/javascript">
            const input = document.getElementById(`inputid`);

            input.addEventListener("paste", function(e) {
                e.preventDefault();
                const text = e.clipboardData.getData(`text`);
                const isValid = !isNaN(text);
                if(isValid) input.value = text;
                isEnabled();
            });

            document.addEventListener(`keydown`, (event) => {
                if(event.key == `Enter` && input == document.activeElement) redirect();
            });

            function number(event) {
                const ASCIICode = event.which ? event.which : event.keyCode 
                if (ASCIICode > 31 && (ASCIICode < 48 || ASCIICode > 57)) 
                    return false;
                return true;
            }

            function isEnabled() {
                const button = document.getElementById(`lookup`);
                button.disabled = input.value == `` || input.value.length < 15;
            }

            function redirect() {
                const input = document.getElementById(`inputid`);
                if(document.getElementById(`lookup`).disabled || input.value == `` || input.value.length < 15) return;
                window.location.pathname = `${input.value}`;
            }
        </script>
    </body>
</html>